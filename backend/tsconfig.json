{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "dist",
    "baseUrl": "./src",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
      "src/**/*.ts",
      "global.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
