{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@v1/*": ["src/api/v1/*"]
    }
  },
  "ts-node": { 
    "files": true 
  },
  "include": [
    "src/**/*.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}